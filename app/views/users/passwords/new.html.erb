<div class="separate">
  <div class="signin-up">
    <div class="loginlogo_area">
      <%= link_to root_path, id: "logo" do%>
        <%= image_tag 'logo.png', class: 'loginlogo' %>
      <% end %>
    </div>
    <h1 class="signin-txt">パスワード再設定</h1>
    <div class="txt-center">
        <p class="font-b">ご登録のメールアドレスを入力してください。</p>
        <p class="font-b">パスワード再設定用のURLがメールで届きます。</p>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field mb-3 pass_field">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'iitoko@example.com' %>
      </div>

      <div class="actions">
        <%= f.submit "送信する", class: 'pink_btn' %>
      </div>
    <% end %>
    <div>
      <%= render "users/shared/links" %>
    </div>
  </div>
  <div class="title_area">
  </div>
</div>