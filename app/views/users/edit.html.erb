<% provide(:title, "プロフィール編集") %>
<% provide(:button_text, '確定する') %>
<h1>プロフィール編集</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="https://gravatar.com/emails" target="_blank" rel="noopener">change</a>
    </div>
    <%= render 'form' %>
  </div>
  <% if current_user?(@user) %>
    <%= link_to "退会する", @user, method: :delete, data: { confirm: '本当に退会しますか？' } %>
  <% end %>
</div>