<div class="container top60 btm10per">
  <section class="local_title_area localprofile_top" style="background: #fff url('<%= @local_headerimage ? @local_headerimage : asset_path('article_default.png') %>') no-repeat center center;">
    <div class="u_image"><%= gravatar_for(@local, size:100) %></div>
    <div class="gravatar_edit txt-center">
      <a href="https://gravatar.com/emails" target="_blank">変更</a>
    </div>
    <h1 class="username"><%= @local.full_name %></h1>
  </section>
  <div class="user_main">
    <h2><i class="fas fa-cog"></i> アカウント設定</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'accountform' }) do |f| %>
        <%= render "locals/shared/error_messages", resource: resource %>

        <div class="field mb-3">
          <%= f.label :image, 'ヘッダー画像', class: 'form-label' %>
          <%= f.file_field :image %>
          <%= f.hidden_field :image_cache %>
        </div>

        <div class="field mb-3">
        <%= f.label :name, '自治体名', class: 'form-label' %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
        </div>

        <div class="field mb-3">
          <%= f.label :email, 'メールアドレス', class: 'form-label' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <h2><i class="fas fa-key"></i> パスワード設定</h2>

        <div class="field mb-3">
          <%= f.label :password, 'パスワード', class: 'form-label' %> <i>(パスワードを変更しない場合は空欄)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field mb-3">
          <%= f.label :password_confirmation, 'パスワード（確認用）', class: 'form-label' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="field mb-3 current_pw">
          <%= f.label :current_password, '現在のパスワード', class: 'form-label' %> <i>(変更内容を確認したら現在のパスワードを入力して確定しましょう)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "確定する", class: 'pink_btn smart_btn' %>
        </div>
      <% end %>
      <%= link_to "<< 元の画面に戻る", :back %>
      <hr>
      <br>
      <%= button_to "退会する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>

  </div>
</div>