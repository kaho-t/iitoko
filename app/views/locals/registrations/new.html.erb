<div class="separate h-auto">
  <div class="signin-up">
    <div class="loginlogo_area">
    <%= link_to root_path, id: "logo" do%>
      <%= image_tag 'logo.png', class: 'loginlogo' %>
    <% end %>
    </div>
    <h1 class="signin-txt">あなたの町に移住したい人が<br>たくさん待っています</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "locals/shared/error_messages", resource: resource %>

      <div class="field mb-3">
      <%= f.label :prefecture_code, '都道府県', class: 'form-label' %>
      <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, {}, { class: 'form-select prefecture'} %>
      </div>

      <div class="field mb-3">
      <%= f.label :name, '自治体名', class: 'form-label' %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
      </div>

      <div class="field mb-3">
        <%= f.label :email, 'メールアドレス', class: 'form-label' %>
        <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, 'パスワード', class: 'form-label' %>
        <% if @minimum_password_length %>
        <em>(半角英大文字・小文字・数字それぞれ１文字以上の8~12文字)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, 'パスワード（確認用）', class: 'form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "無料で会員登録する", class: 'pink_btn' %>
      </div>
    <% end %>
    <div>
      <%= render "locals/shared/links" %>
    </div>
  </div>
  <div class="title_area">
  </div>
</div>