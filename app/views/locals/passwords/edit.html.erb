<div class="separate">
  <div class="signin-up">
    <div class="loginlogo_area">
      <%= link_to root_path, id: "logo" do%>
        <%= image_tag 'logo.png', class: 'loginlogo' %>
      <% end %>
    </div>
    <h1 class="signin-txt">パスワード再設定</h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "locals/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "新しいパスワード", class: 'form-label' %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "新しいパスワード（確認用）", class: 'form-label' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="actions top5per">
        <%= f.submit "確定する", class: 'pink_btn' %>
      </div>
    <% end %>

    <div>
      <%= render "locals/shared/links" %>
    </div>
  </div>
  <div class="title_area">
  </div>
</div>
