  <%= hidden_field_tag :local_id, @local.id %>
  <%= button_tag :type => "submit", style: 'color: orange; border: none; background: none;', class: 'bookmarked-btn' do %>
    <i class="fas fa-bookmark"></i>
  <% end %>
<% end %>