<% if user_signed_in? %>
  <% if current_user.bookmarking?(local) %>
    <%= form_with(model: current_user.bookmarks.find_by(local_id: local.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :local_id, local.id %>
      <%= f.submit 'ブックマークを外す', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.bookmarks.build, local: true) do |f| %>
      <%= hidden_field_tag :local_id, local.id %>
      <%= f.submit 'ブックマークする', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>