  <div class="container">
    <%= link_to "iitoko", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "検索", '#' %></li>
          <li><%= link_to "タイムライン", '#' %></li>
          <li><%= link_to "メッセージ", '#' %></li>
          <li><%= link_to "通知", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
