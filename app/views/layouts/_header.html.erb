<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "iitoko", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="<%= search_path %>"><i class="fas fa-search"></i></a>
        <% if user_signed_in? %>
          <li><%= link_to "検索", '#' %></li>
          <li><%= link_to "タイムライン", '#' %></li>
          <li><%= link_to "メッセージ", '#' %></li>
          <li><%= link_to "通知", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= gravatar_for current_user, size: 30 %>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "プロフィール編集", edit_user_registration_path %></li>
              <li><%= link_to "ブックマーク", "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% elsif local_signed_in? %>
          <li><%= link_to 'マイページ', current_local %></li>
          <li><%= link_to '記事作成', new_article_path %></li>
          <li><%= link_to '記事一覧', local_articles_path(current_local) %></li>
          <li><%= link_to "メッセージ", '#' %></li>
          <li><%= link_to "通知", '#' %></li>
          <li><%= link_to 'ログアウト', destroy_local_session_path, method: :delete %>
        <% else %>
          <li><%= link_to "ログイン", new_user_session_path %></li>
          <li><%= link_to "自治体の方はこちら", new_local_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>