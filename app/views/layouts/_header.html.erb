<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "iitoko", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="<%= search_path %>"><i class="fas fa-search"></i></a>
        <li><%= link_to '都道府県から探す', prefectures_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "タイムライン", timeline_path %></li>
          <li><%= link_to "メッセージ", talkrooms_path %></li>
          <li><%= link_to notifications_path do %>
                <% if unchecked_notifications.any? %>
                  <span class="fa-stack fa-2x">
                    <i class="fas fa-bell fa-lg fa-stack-2x" style="font-size: 1em;"></i>
                    <i class="fas fa-circle n-circle fa-stack-1x"></i>
                  </span>
                <% else %>
                  <i class="fas fa-bell fa-lg"></i>
                <% end %>
              <% end %>
            </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= gravatar_for current_user, size: 30 %>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "プロフィール編集", edit_user_registration_path %></li>
              <li><%= link_to "ブックマーク", bookmarks_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% elsif local_signed_in? %>
          <li><%= link_to 'マイページ', current_local %></li>
          <li><%= link_to '記事作成', new_article_path %></li>
          <li><%= link_to '記事一覧', local_articles_path(current_local) %></li>
          <li><%= link_to "メッセージ", talkrooms_path %></li>
          <li><%= link_to notifications_path do %>
            <% if unchecked_notifications.any? %>
              <span class=""fa-stack fa-2x>
                <i class="fas fa-bell fa-lg fa-stack-2x" style="font-size: 1em;"></i>
                <i class="fas fa-circle n-circle fa-stack-1x" style="color:tomato"></i>
              </span>
            <% else %>
              <i class="fas fa-bell fa-lg" style="font-size: 1.5em;"></i>
            <% end %>
          <% end %>
        </li>
          <li><%= link_to 'ログアウト', destroy_local_session_path, method: :delete %>
        <% else %>
          <li><%= link_to "ログイン", new_user_session_path %></li>
          <li><%= link_to "自治体の方はこちら", new_local_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>