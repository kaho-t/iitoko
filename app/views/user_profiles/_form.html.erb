<%= form_with model: @user_profile, local: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.label :prefecture_code, '居住地' %><br />
  <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name %>

  <%= f.label :age, '年齢' %>
  <%= f.select :age, [[10],[20],[30],[40],[50],[60],[70],[80],[90]], prompt: "年代を選択してください" %>代

  <%= f.label :proposed_site, '興味のある地域・検討中の地域' %>
  <%= f.text_field :proposed_site %>

  <%= f.label :job, '職業' %>
  <%= f.text_field :job %>

  <%= f.label :family_structure, '家族構成' %>
  <%= f.text_field :family_structure %>

  <%= f.label :timing, '移住を検討している時期,' %>
  <%= f.select :timing, [['条件があえばすぐにでも'],['3年以内'],['10年以内'],['定年後'],['きっかけがあれば'],['決まっていないがいつかは'],['未定']], prompt: "移住を検討している時期を選択してください" %>

  <%= f.label :content, '移住を検討したきっかけ' %>
  <%= f.text_field :content %>

  <%= f.submit '確定' %>
<% end %>